@using Perplex.ContentBlocks.Rendering;
@model IContentBlockViewModel<ServiceListNC>
@{
    var content = Model.Content;
}

<section class="wrapper style2">
    <div class="inner">
        <div class="grid-style">

            @foreach (var service in content.Services)
            {
                <div>
                    <div class="box">
                        <div class="image fit">
                            <img src="@service.Image.Url()" alt="" />
                        </div>
                        <div class="content">
                            <header class="align-center">
                                <p>@service.LeadText</p>
                                <h2>@service.Heading</h2>
                            </header>
                            @service.Description
                            <footer class="align-center">
                                <a href="@service.Link.Url" target="@service.Link.Target" class="button alt">@service.Link.Name</a>
                            </footer>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>